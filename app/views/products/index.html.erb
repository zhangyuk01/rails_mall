<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">商品清单</h3>
  </div>
<div class="panel-body">

<table class="table table-hover table-striped">
    <tr>
      <th>商品名称</th>
      <th>价格</th>
      <th>商品单号</th>
      <th colspan="3"></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.num %></td>
        <td><%= link_to '显示', product,class: 'btn btn-primary' %></td>
        <td><%= link_to '编辑', edit_product_path(product) ,class: 'btn btn-primary'%></td>
        <td><%= link_to '删除', product, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to '新建', new_product_path, class: 'btn btn-primary' %>
